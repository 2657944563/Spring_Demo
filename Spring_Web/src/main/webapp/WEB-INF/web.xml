<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    配置全局参数-->
    <context-param>
        <param-name>userProperties</param-name>
        <param-value>user.properties</param-value>
    </context-param>
    <context-param>
        <param-name>applicationContext</param-name>
        <param-value>application</param-value>
    </context-param>
    
<!--    配置监听器-->
    <listener>
        <listener-class>com.example.Listener.serviceContextListener</listener-class>
    </listener>


<!--    配置Servlet站点路径-->
    <servlet>
        <servlet-name>Servlet_web</servlet-name>
        <servlet-class>com.example.Web.Spring_web1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet_web</servlet-name>
        <url-pattern>/Spring_web2</url-pattern>
    </servlet-mapping>
</web-app>